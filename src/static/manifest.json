{
  "manifest_version": 3,
  "name": "Mooget",
  "version": "1.0.0",
  "author": "verteramo",
  "description": "Manage Moodle's tests",
  "homepage_url": "https://github.com/verteramo/mooget",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "action": {
    "default_icon": "assets/logo.png",
    "default_popup": "pages/popup.html"
  },
  "side_panel": {
    "default_path": "pages/sidepanel.html"
  },
  
  // Full page options
  // "options_page": "pages/options.html",

  // Embedded options
  // "options_ui": {
  //   "page": "pages/options.html",
  //   "open_in_tab": false
  // },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "sidePanel"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ]
}
